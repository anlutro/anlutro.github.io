<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>{% block title %}{% endblock %} - {{ site_title }}</title>
	<meta name="description" content="{% block description %}{{ site_description }}{% endblock %}">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="alternate" type="application/rss+xml" href="{{ root_url }}/rss.xml" title="{{ site_title }} - RSS feed">
	<link rel="stylesheet" href="{{ asset_url('style.css') }}">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400italic,600" rel="stylesheet" type="text/css">
	<link rel="icon" href="data:;base64,=">
</head>
<body class="{% block body_class %}{% endblock %}">

<div class="site-container">
	<main class="main">
	{% block content %}{% endblock %}
	</main>
	<section class="sidebar">
		<h1 class="site-title"><a href="{{ root_url }}">lutro.me</a></h1>
		<small class="site-subtitle">Andreas Lutro</small>

		<aside class="menu">
			<ul>
				<li><a href="{{ root_url }}/about">About me</a></li>
				<li>{{ a('GitHub', 'https://github.com/anlutro', blank=true) }}</li>
				<li>{{ a('Twitter', 'https://twitter.com/AndreasLutro', blank=true) }}</li>
				<li>{{ a('StackOverflow', 'https://stackoverflow.com/story/andreaslutro', blank=true) }}</li>
				<li>{{ a('LinkedIn', 'https://www.linkedin.com/in/andreaslutro/', blank=true) }}</li>
				<li><a href="{{ root_url }}/rss.xml">RSS feed</a></li>
			</ul>
		</aside>

		<aside class="tag_cloud">
			<h2>Tags</h2>
			<div class="tags">
			{%- for tag in tags | sort(attribute='slug') %}
				<a href="{{ tag.url }}" class="tag">{{ tag.title }}</a>
			{%- endfor %}
			</div>
		</aside>
	</section>

	<footer class="footer">
		<p>
			Like what you read? Need a VPS? Use this <a href="https://www.linode.com/?r=65fbbe55932fe209997d1ab388e4781bdb6243ba">Linode referral link</a>!
		</p>
		<p>
			2012 - {{ now.strftime('%Y') }} &copy; Andreas Lutro
		</p>
	</footer>
</div>

