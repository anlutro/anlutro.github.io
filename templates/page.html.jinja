{% extends 'layout.html.jinja' %}
{% block body_class %}single single-page{% endblock %}
{% block title %}{{ page.title }}{% endblock %}
{% block description %}{{ page.description }}{% endblock %}
{% block content %}

	<article class="page">
		<header class="page-header">
			<h2 class="page-title">
				{{ page.title }}
			{%- if page.subtitle %}
				<small>{{ page.subtitle }}</small>
			{%- endif %}
			</h2>
		</header>
		<div class="page-body">
			{{ page.body }}
		</div>
	</article>

{% if page.allow_comments %}
<div id="disqus_thread" class="comments"></div>
<script type="text/javascript">
var disqus_shortname = 'lutro';
var disqus_identifier = "{{ page.slug }}";
var disqus_title = "{{ page.title }}";

(function() {
	var dsq = document.createElement('script');
	dsq.type = 'text/javascript';
	dsq.async = true;
	dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
})();
</script>
<noscript>Comments are powered by Disqus and require Javascript to be enabled.</noscript>
{% endif %}

{% endblock %}
