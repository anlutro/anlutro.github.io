{% extends 'layout.html.jinja' %}
{% block body_class %}single single-post{% endblock %}
{% block title %}{{ post.title }}{% endblock %}
{% block content %}

	<article class="post">
		<header class="post-header">
			<span class="post-pubdate">{{ post.pubdate.strftime('%B %d, %Y') }}</span>
			<h2 class="post-title">
				{{ post.title }}
			{%- if post.subtitle %}
				<small>{{ post.subtitle }}</small>
			{%- endif %}
			</h2>
		</header>
		<div class="post-body">
			{{ post.body }}
		</div>
		<footer class="post-footer">
			{% if post.tags %}
			<p class="post-tags">
				Tags: {{ post.tag_links | join(', ') }}
			</p>
			{% endif %}
		</footer>
	</article>

<div id="disqus_thread" class="comments"></div>
<script type="text/javascript">
var disqus_shortname = 'lutro';
var disqus_identifier = '{{ post.slug }}';
var disqus_title = '{{ post.title }}';

(function() {
	var dsq = document.createElement('script');
	dsq.type = 'text/javascript';
	dsq.async = true;
	dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
})();
</script>
<noscript>Comments are powered by Disqus and require Javascript to be enabled.</noscript>

{% endblock %}
